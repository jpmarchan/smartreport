<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.doct.SpeechReportActivity">

    <EditText
        android:id="@+id/txtmessage"
        android:layout_width="379dp"
        android:layout_height="68dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="Presione el boton para comensar a dictar el reporte."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textVoice"
        android:layout_width="394dp"
        android:layout_height="280dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/txtmessage"
        app:layout_constraintStart_toStartOf="@+id/txtmessage"
        app:layout_constraintTop_toBottomOf="@+id/txtmessage" />

    <ImageButton
        android:id="@+id/voiceBtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/textVoice"
        app:layout_constraintStart_toStartOf="@+id/textVoice"
        app:layout_constraintTop_toBottomOf="@+id/textVoice"
        app:srcCompat="@drawable/ic_baseline_mic_24" />


</androidx.constraintlayout.widget.ConstraintLayout>