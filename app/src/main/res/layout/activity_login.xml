<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".ui.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_secundary" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txt_user"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/bg_edittext"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/txt_pass"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:elevation="4dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="ContraseÃ±a"
        android:paddingHorizontal="15dp"
        android:background="@drawable/bg_edittext"
        app:layout_constraintEnd_toEndOf="@+id/txt_user"
        app:layout_constraintStart_toStartOf="@+id/txt_user"
        app:layout_constraintTop_toBottomOf="@+id/txt_user" />

    <Button
        android:id="@+id/sign_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="180dp"
        android:background="@drawable/bg_button"
        android:text="Iniciar"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_user"
        app:layout_constraintStart_toStartOf="@+id/txt_user" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Solicitar registrarme"
        android:clickable="true"
        android:textColor="#84B6F4"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/sign_button"
        app:layout_constraintStart_toStartOf="@+id/sign_button"
        app:layout_constraintTop_toBottomOf="@+id/sign_button" />


</androidx.constraintlayout.widget.ConstraintLayout>